{
  "name": "bootstrap-api",
  "version": "0.0.1",
  "description": "Bootstrap for starting a new API, using: TypeScript and HAPI",
  "author": "Gerardo Lima",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "bootstrap",
    "api",
    "docker",
    "typescript"
  ],
  "scripts": {
    "build": "tsc",
    "build:w": "tsc --watch",
    "clean": "rm -rf out",
    "clean:all": "rm -rf out node_modules package-lock.json; git checkout -- package-lock.json",
    "lint": "eslint src --cache --cache-location out/.eslintcache",
    "lint:w": "nodemon --watch src --ext ts --delay 10ms --exec 'npm run lint -- --fix'",
    "start": "node out/build/app",
    "start:w": "ts-node-dev src/app --inspect=9000 | pino-pretty --minimumLevel trace --singleLine",
    "test": "jest",
    "test:w": "jest --watch --onlyChanged --verbose --coverage false"
  },
  "dependencies": {
    "@hapi/basic": "^7.0.0",
    "@hapi/boom": "^10.0.0",
    "@hapi/catbox": "^12.1.0",
    "@hapi/catbox-memory": "^6.0.0",
    "@hapi/hapi": "^21.0.0",
    "@hapi/hoek": "^10.0.1",
    "@types/hapi__hapi": "^20.0.13",
    "hapi-mongodb": "^10.0.3",
    "hapi-pino": "^11.0.1",
    "tslib": "^2.4.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3",
    "@types/hapi__basic": "^5.1.2",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chance": "^1.1.9",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "mongodb": "^4.13.0",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  }
}
